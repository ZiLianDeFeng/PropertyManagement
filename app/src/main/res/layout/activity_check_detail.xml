                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="@dimen/marginleft"
                    android:paddingRight="@dimen/marginleft">

                    <TextView
                        style="@style/OrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="责任人员" />

                    <TextView
                        android:id="@+id/tv_responser"
                        style="@style/OrderDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:text="更换" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="@dimen/marginleft"
                    android:paddingRight="@dimen/marginleft">

                    <TextView
                        style="@style/OrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="巡检人员" />

                    <TextView
                        android:id="@+id/tv_inspectorName"
                        style="@style/OrderDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:text="test" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_padding">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginleft"
                    android:gravity="center_vertical"
                    android:text="巡检结果："
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/tv_result"
                    style="@style/CommonTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginleft"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
