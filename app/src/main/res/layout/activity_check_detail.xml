                    <TextView
                        style="@style/OrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="任务单号" />

                    <TextView
                        android:id="@+id/tv_taskCode"
                        style="@style/OrderDetailText"
