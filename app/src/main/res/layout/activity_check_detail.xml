                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="@dimen/marginleft"
                    android:paddingRight="@dimen/marginleft">

                    <TextView
                        style="@style/OrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="@string/job_name" />

                    <TextView
                        android:id="@+id/tv_taskName"
                        style="@style/OrderDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:text="设备一巡检" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="@dimen/marginleft"
                    android:paddingRight="@dimen/marginleft">

                    <TextView
                        style="@style/OrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="设备名称" />

                    <TextView
                        android:id="@+id/tv_deviceName"
                        style="@style/OrderDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:text="设备一" />
                </RelativeLayout>

                <!--<RelativeLayout-->
