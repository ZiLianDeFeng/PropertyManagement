<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_padding"
    android:background="@drawable/maintain_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <!--<ImageView-->
    <!--android:id="@+id/iv_order"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginLeft="@dimen/marginleft"-->
    <!--android:layout_marginRight="@dimen/marginleft"-->
    <!--android:src="@mipmap/odd_numbers" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_blue"
            android:paddingLeft="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/order_number"
                android:textColor="@color/white"
                android:textSize="@dimen/item_size" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/marginleft"
                android:gravity="center_vertical"
                android:text="20161222132724"
                android:textColor="@color/white"
                android:textSize="@dimen/item_size" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_min_button"
                android:gravity="center"
                android:paddingTop="@dimen/common_dp"
                android:paddingBottom="@dimen/common_dp"
                android:paddingLeft="@dimen/marginleft"
                android:paddingRight="@dimen/marginleft"
                android:layout_marginRight="@dimen/common_dp"
                android:text="待维修"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#1000" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_top"
            android:paddingBottom="@dimen/common_padding"
            android:paddingTop="@dimen/common_min_padding">

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_dp"
                android:paddingLeft="40dp"
                android:paddingTop="@dimen/common_dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_dp"
                    android:src="@mipmap/adress" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新大楼住院部负1楼供应室二单元15楼"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_address"
                android:layout_marginTop="@dimen/common_margin_top"
                android:paddingBottom="@dimen/common_dp"
                android:paddingLeft="40dp"
                android:paddingTop="@dimen/common_dp">

                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_dp"
                        android:src="@mipmap/phone" />


                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="15071481976"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_address"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ll_phone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_dp"
                        android:src="@mipmap/time" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-12-22 13:27"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_text_size" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>