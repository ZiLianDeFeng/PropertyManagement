<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <ListView
        android:id="@+id/lv_maintain_material"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:scrollbars="none" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue"
        android:padding="@dimen/marginleft">

        <CheckBox
            android:id="@+id/cb_check_all"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleft"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleft"
            android:layout_toRightOf="@id/cb_check_all"
            android:text="全选"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            android:visibility="invisible" />

        <!--<Button-->
        <!--android:id="@+id/btn_cancel"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="@drawable/shape_botton_button"-->
        <!--android:text="取消" />-->
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_botton_button"
            android:text="删除"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_botton_button"
            android:text="保存" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_padding"
            android:layout_toLeftOf="@id/btn_save"
            android:background="@drawable/shape_botton_button"
            android:text="新增" />

    </RelativeLayout>
</LinearLayout>