<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:orientation="horizontal"
    android:paddingTop="@dimen/common_dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginleft"
        android:src="@mipmap/maintenance_notification" />

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_min_padding">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巡检任务通知"
                android:textColor="@color/black"
                android:textSize="@dimen/item_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_padding"
            android:paddingLeft="@dimen/common_min_padding">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:text="你好"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size" />
            <com.jauker.widget.BadgeView
                android:id="@+id/bv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_min_padding">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-2-2 10:27"
                android:textColor="#6000" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>